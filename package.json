    "deploy": "npm run mp3 && npm run feed"
  },
  "engines": {
    "node": ">=13"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "editorconfig-checker": "^3.0.4",
    "html-minifier": "^4.0.0",
    "markdown-it": "^10.0.0",
    "music-metadata": "^6.2.0",
    "pretty-data": "^0.40.0",
    "yaspeller": "^6.0.2"
  }
}
