{
  "private": true,
  "scripts": {
    "editorconfig": "editorconfig-checker",
    "yaspeller": "yaspeller src/episodes",
    "test": "npm run editorconfig && npm run yaspeller",
    "build": "eleventy",
    "mp3": "cd src/mp3 && rsync -az --delete . web-standards.ru:/var/www/web-standards.ru/html/podcast/episodes/",
